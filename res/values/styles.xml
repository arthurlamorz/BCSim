<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="btnStyleRetro" parent="@android:style/Widget.Button">
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">#fff</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:background">#000000</item>
       <item name="android:padding">10dip</item>
   </style>
   
    <style name="textStyleRetro">
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">#fff</item>
       <item name="android:gravity">left</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:background">#f00</item>
       <item name="android:padding">10dip</item>
   </style>
   
    <style name="textStyle01">
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">#fff</item>
   </style>
    
    <style name="textStyle02">
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">#ff0</item>
   </style>
   
    <style name="textStyle03">
       <item name="android:textSize">20sp</item>
       <item name="android:textColor">#0f0</item>
   </style>
   
   <style name="textStyle04">
       <item name="android:textSize">20sp</item>
