<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="showDetails_checkbox"
        android:summary="@string/pref_description_show_details"
        android:title="@string/pref_title_show_details" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_no_of_rounds"
        android:inputType="number"
        android:key="no_of_rounds_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_no_of_rounds" />
    
    <EditTextPreference
        android:defaultValue="@string/pref_default_win_probability"
        android:inputType="number"
        android:key="win_probability_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_win_probability" />


</PreferenceScreen>
